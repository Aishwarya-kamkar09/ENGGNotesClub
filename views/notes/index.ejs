/* ===== CONTENT ===== */
.content {
    margin-left: 260px;
    padding: 30px;
}

/* ===== HEADER ===== */
.notes-header {
    padding-top: 50px;
    text-align: center;
    margin-bottom: 40px;
}

.notes-header h2 {
    font-size: 38px;
    font-weight: 700;
}

/* ===== NOTES GRID ===== */
.notes-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
}

/* ===== NOTE CARD ===== */
.note-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 22px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.06);
    transition: all 0.3s ease;
    cursor: pointer;
    border: 1px solid #e5e7eb;
}

.note-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 14px 30px rgba(0,0,0,0.12);
    border-color: #3A4EFF;
}

/* ===== CARD HEADER ===== */
.note-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.note-subject {
    font-size: 20px;
    font-weight: 600;
    margin: 0;
}

.note-semester {
    font-size: 14px;
    color: #6b7280;
    margin-top: 6px;
}

/* ===== ARROW ===== */
.arrow {
    font-size: 22px;
    transition: transform 0.25s ease;
}

.arrow.rotate {
    transform: rotate(180deg);
}

/* ===== EXPAND SECTION ===== */
.expand-content {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.35s ease;
}

.expand-content.open {
    max-height: 260px;
    opacity: 1;
    margin-top: 14px;
}

/* ===== BUTTON ===== */
.view-btn {
    display: inline-block;
    margin-top: 10px;
    padding: 8px 14px;
    background: #3A4EFF;
    color: #fff;
    border-radius: 8px;
    font-size: 14px;
    text-decoration: none;
    transition: 0.2s ease;
}

.view-btn:hover {
    background: #004EEB;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
    /* .sidebar {
        display: none;
    } */

    .content {
        margin-left: 0;
        padding: 20px;
    }

    .notes-header h2 {
        padding-top: 50px;
        font-size: 30px;
    }
}
</style>

