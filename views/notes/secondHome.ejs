<% layout("layouts/boilerplate") %>

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Engineering Study Materials</title>

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f6f9;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
    }

    h1, h2 {
        text-align: center;
        color: #333;
    }

    .btn {
        display: block;
        width: 300px;
        margin: 15px auto;
        padding: 14px;
        background: #0066ff;
        color: white;
        text-align: center;
        text-decoration: none;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.2s;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .hidden {
        display: none;
    }

    .section-box {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        margin-top: 25px;
        animation: fade 0.4s ease;
    }

    .sub-btn {
        padding: 12px;
        width: 250px;
        display: inline-block;
        margin: 10px;
        background: #00b36b;
        color: white;
        text-align: center;
        border-radius: 6px;
        cursor: pointer;
        text-decoration: none;
        transition: 0.2s;
    }

    .sub-btn:hover {
        opacity: 0.8;
    }

    @keyframes fade {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

</style>

<script>
function showSection(id) {
    document.querySelectorAll(".section").forEach(sec => sec.classList.add("hidden"));
    document.getElementById(id).classList.remove("hidden");
    window.scrollTo({ top: 0, behavior: 'smooth' });
}
</script>

</head>
<body>

<div class="container">

    <!-- SECTION 1 : ENGINEERING BUTTON -->
    <div id="sec-engineering" class="section section-box">
        <h1>Engineering Study Materials</h1>
        <p style="text-align:center;">Download Notes & Question Papers</p>

        <button class="btn" onclick="showSection('sec-2017')">2017 Scheme Notes</button>
        <button class="btn" onclick="showSection('sec-2018')">2018 Scheme Notes</button>
        <button class="btn" onclick="showSection('sec-2022')">2022 Scheme Notes</button>
        <button class="btn" onclick="showSection('sec-2023')">2023 Scheme Notes</button>
    </div>

    <!-- SECTION 2 : SCHEME SELECTION -->
    <div id="sec-2022" class="section section-box hidden">
        <h2>Choose Department</h2>

        <button class="btn" onclick="showSection('sec-dept')">Go to Departments</button>
    </div>

    <!-- SECTION 3 : DEPARTMENTS -->
    <div id="sec-dept" class="section section-box hidden">
        <h2>Select Department</h2>

        <button class="btn" onclick="showSection('sec-cse')">Computer Science</button>
        <button class="btn" onclick="showSection('sec-ece')">Electronics & Communication</button>
        <button class="btn" onclick="showSection('sec-mech')">Mechanical Engineering</button>
        <button class="btn" onclick="showSection('sec-re')">Robotics Engineering</button>
        <button class="btn" onclick="showSection('sec-ce')">Civil Engineering</button>
        <button class="btn" onclick="showSection('sec-ise')">Information Science Engineering</button>
        <button class="btn" onclick="showSection('sec-aiml')">Artificial Intelligence & Mechine Learning</button>
        <button class="btn" onclick="showSection('sec-cme')">Chemical and Materials Engineering</button>
    </div>

    <!-- SECTION 4 : CSE SEMESTERS -->
    <div id="sec-cse" class="section section-box hidden">
        <h2>Computer Science (2022 Scheme)</h2>

        <button class="sub-btn">1rd Sem</button>
        <button class="sub-btn">2rd Sem</button>
        <button class="sub-btn" onclick="showSection('sec-cse-sem3')">3rd Sem</button>
        <button class="sub-btn" onclick="showSection('sec-cse-sem4')">4th Sem</button>
    </div>

    <!-- CSE 3rd SEM SUBJECTS -->
    <div id="sec-cse-sem3" class="section section-box hidden">
        <h2>CSE - 3rd Semester</h2>

        <button class="sub-btn" onclick="showSection('sec-os')">BCS303 - Operating System</button>
        <button class="sub-btn">BCS304 - Data Structures</button>
        <button class="sub-btn">BCS305 - Discrete Mathematics</button>
    </div>

    <!-- OS SUBJECT DETAILS -->
    <div id="sec-os" class="section section-box hidden">
        <h2>Operating System</h2>

        <p><strong>Subject Code:</strong> BCS303</p>
        <p><strong>Subject Name:</strong> Operating System</p>

        <button class="btn">Download Notes</button>
        <button class="btn">Download Question Papers</button>
    </div>

    <!-- ECE SECTION -->
    <div id="sec-ece" class="section section-box hidden">
        <h2>Electronics & Communication</h2>
        <button class="sub-btn">1rd Sem</button>
        <button class="sub-btn">2rd Sem</button>
        <button class="sub-btn">3rd Sem</button>
        <button class="sub-btn">4th Sem</button>
    </div>

    <!-- MECHANICAL SECTION -->
    <div id="sec-mech" class="section section-box hidden">
        <h2>Mechanical Engineering</h2>
        <button class="sub-btn">3rd Sem</button>
        <button class="sub-btn">4th Sem</button>
    </div>

</div>

</body>
</html>