 <style>
/* =========================
   RESET & BASE
========================= */
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
}

body{
  font-family: "Segoe UI", Roboto, Arial, sans-serif;
  background:#F8FAFC;
  color:#0F172A;
}

/* =========================
   PAGE LAYOUT
========================= */
.login-wrapper{
  min-height:85vh;
  display:flex;
  justify-content:center;
  align-items:center;
  padding:20px;
}

/* =========================
   CARD
========================= */
.auth-card{
  width:100%;
  max-width:380px;
  background:#ffffff;
  padding:36px 32px;
  border-radius:10px;
  border:1px solid #E2E8F0;
}

/* =========================
   TITLE & SUBTITLE
========================= */
.title{
  text-align:center;
  font-size:24px;
  font-weight:600;
  margin-bottom:6px;
}

.subtitle{
  text-align:center;
  font-size:14px;
  color:#475569;
  margin-bottom:28px;
}

.subtitle span{
  color:#1E3A8A;
  font-weight:600;
}

/* =========================
   INPUT GROUP
========================= */
.input-group{
  position:relative;
  margin-bottom:20px;
}

.input-group input{
  width:100%;
  padding:14px 12px;
  font-size:14px;
  border:1px solid #CBD5E1;
  border-radius:6px;
  outline:none;
  background:#fff;
}

.input-group input:focus{
  border-color:#2563EB;
}

/* Floating label */
.input-group label{
  position:absolute;
  left:12px;
  top:50%;
  transform:translateY(-50%);
  font-size:14px;
  color:#64748B;
  background:#fff;
  padding:0 6px;
  pointer-events:none;
  transition:0.2s ease;
}

.input-group input:focus + label,
.input-group input:valid + label{
  top:-8px;
  font-size:12px;
  color:#2563EB;
}

/* =========================
   BUTTON
========================= */
.email-btn{
  width:100%;
  padding:14px;
  font-size:15px;
  font-weight:600;
  border:none;
  border-radius:6px;
  background:#1E3A8A;
  color:#ffffff;
  cursor:pointer;
  margin-top:6px;
}

.email-btn:hover{
  background:#162C46;
}

/* =========================
   FOOTER TEXT
========================= */
.bottom-text{
  margin-top:18px;
  text-align:center;
  font-size:14px;
  color:#475569;
}

.bottom-text a{
  color:#2563EB;
  text-decoration:none;
  font-weight:500;
}

.bottom-text a:hover{
  text-decoration:underline;
}

/* =========================
   RESPONSIVE
========================= */
@media (max-width:480px){
  .auth-card{
    padding:28px 22px;
  }

  .title{
    font-size:22px;
  }
}
</style>
<% layout("/layouts/boilerplate") %>

<div class="login-wrapper">

  <div class="auth-card">

    <h2 class="title" style="padding: 10px;">Create Account</h2>
    <p class="subtitle">
      Join  <span>ENGGNOTESCLUB</span>
    </p>

    <form action="/signup" method="POST">

      <div class="input-group">
        <input type="text" name="username" required>
        <label>Username</label>
      </div>

      <div class="input-group">
        <input type="email" name="email" required>
        <label>Email</label>
      </div>

      <div class="input-group">
        <input type="password" name="password" required>
        <label>Password</label>
      </div>

      <button class="email-btn">Create Account</button>

      <p class="bottom-text">
        Already have an account?
        <a href="/login">Login</a>
      </p>

    </form>

  </div>

</div>