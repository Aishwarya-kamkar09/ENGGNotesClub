<% layout("/layouts/boilerplate") %>

<div style="display:flex;justify-content:center;align-items:center;height:85vh;">

<div class="auth-card">

    <h2>Login</h2>
    <p>Welcome back</p> -

    <!-- ‚úÖ GOOGLE LOGIN BUTTON -->
    <a href="/auth/google" class="google-btn">
        <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png">
        Sign in with Google
    </a>

    <hr style="margin:18px 0;">

    <!-- ‚úÖ EMAIL LOGIN FORM -->
    <form action="/login" method="POST">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>

        <button class="email-btn">Sign in with Email</button>
        <a href="/forgot-password" style="margin-top: 10px; display: block;">Forgot Password</a>
        
    </form>

</div>

</div>

<style>
.auth-card{
    width:360px;
    background:#fff;
    padding:30px;
    text-align:center;
    box-shadow:0 0 20px rgba(0,0,0,.1);
    border-radius:10px;
}
.auth-card input{
    width:100%;
    padding:12px;
    margin:10px 0;
    border-radius:6px;
    border:1px solid #ccc;
}
.email-btn{
    background:#0074e8;
    color:#fff;
    width:100%;
    padding:12px;
    border:none;
    border-radius:5px;
    margin-top:10px;
}
.google-btn{
    display:flex;
    align-items:center;
    justify-content:center;
    width:100%;
    border:1px solid #ccc;
    background:#fff;
    padding:12px;
    margin-top:12px;
    border-radius:5px;
    cursor:pointer;
    text-decoration:none;
    color:#333;
}
.google-btn img{
    width:18px;
    margin-right:8px;
}
</style>















