<style>
/* ---------- Reset ---------- */
*{
  box-sizing:border-box;
  margin:0;
  padding:0;
}

/* ---------- Page Layout ---------- */
.login-wrapper{
  min-height:100vh;
  display:flex;
  justify-content:center;
  align-items:center;
  /* background:#ffffff; */
  font-family:'Segoe UI',sans-serif;
  padding:20px;
}

/* ---------- Card ---------- */
.auth-card{
  width:100%;
  max-width:380px;
  background:#fff;
  padding:32px;
  border-radius:18px;
  box-shadow:0 20px 45px rgba(0,0,0,0.12);
  text-align:center;
  transition:.3s;
}

/* ---------- Text ---------- */
.title{
  font-size:20px;
  color: #3c3e41;
  margin-bottom:6px;
}

.subtitle{
  color:#272e38;
  margin-bottom:26px;
}

.subtitle span{
  color:#1E3A8A;
  font-weight:600;
}

/* ---------- Google Button ---------- */
.google-btn{
  display:flex;
  align-items:center;
  justify-content:center;
  gap:10px;
  width:100%;
  padding:13px;
  border:1px solid #E2E8F0;
  border-radius:12px;
  background:#fff;
  text-decoration:none;
  color:#0F172A;
  font-weight:500;
  transition:.2s;
}

.google-btn:hover{
  background:#F1F5F9;
}

.google-btn img{
  width:20px;
}

/* ---------- Divider ---------- */
.divider{
  margin:20px 0;
  position:relative;
}

.divider span{
  background:#fff;
  padding:0 12px;
  color:#64748B;
  font-size:14px;
}

.divider::before{
  content:"";
  position:absolute;
  left:0;
  right:0;
  top:50%;
  height:1px;
  background:#E2E8F0;
  z-index:-1;
}

/* ---------- Inputs ---------- */
.input-group{
  position:relative;
  margin-bottom:18px;
}

.input-group input{
  width:100%;
  padding:14px;
  border-radius:12px;
  border:1px solid #CBD5E1;
  outline:none;
  font-size:14px;
}

.input-group label{
  position:absolute;
  top:50%;
  left:14px;
  color:#94A3B8;
  font-size:14px;
  transform:translateY(-50%);
  pointer-events:none;
  transition:.2s;
  background:#fff;
  padding:0 6px;
}

.input-group input:focus + label,
.input-group input:valid + label{
  top:-7px;
  font-size:12px;
  color:#2563EB;
}

/* ---------- Email Button ---------- */
.email-btn{
  width:100%;
  padding:14px;
  background:#1E3A8A;
  border:none;
  border-radius:14px;
  color:#fff;
  font-size:15px;
  font-weight:600;
  cursor:pointer;
  transition:.2s;
}

.email-btn:hover{
  background:#162C46;
}

/* ---------- Forgot ---------- */
.forgot-link{
  display:block;
  margin-top:16px;
  font-size:14px;
  text-decoration:none;
  color:#2563EB;
}

.forgot-link:hover{
  text-decoration:underline;
}

/* ============================= */
/* ðŸ“± MOBILE (max 480px) */
/* ============================= */
@media (max-width:480px){
  .auth-card{
    padding:26px;
    border-radius:14px;
  }

  .title{
    font-size:22px;
  }

  .subtitle{
    font-size:14px;
  }

  .email-btn,
  .google-btn{
    padding:13px;
    font-size:14px;
  }
}

/* ============================= */
/* ðŸ“² TABLET (481px â€“ 768px) */
/* ============================= */
@media (max-width:768px){
  .auth-card{
    max-width:420px;
  }
}

/* ============================= */
/* ðŸ’» LARGE SCREEN (1024px+) */
/* ============================= */
@media (min-width:1024px){
  .login-wrapper{
    /* background: #ffffff; */
  }
}
</style>