<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
/* Main container */
.profile-container {
    max-width: 650px;
    margin: auto;
    margin-top: 40px;
    padding: 30px;
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.12);
    animation: fadeIn 0.4s ease-in-out;
}

/* Smooth animation */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

/* Profile circle */
.profile-photo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 5px solid #4CAF50;
    overflow: hidden;
    margin: auto;
    position: relative;
    cursor: pointer;
    transition: 0.4s ease;
}

.profile-photo:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
}

.profile-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Camera icon overlay */
.profile-photo::after {
    content: "\f030"; /* FontAwesome camera icon */
    font-family: "Font Awesome 6 Free";
    font-weight: 900;
    position: absolute;
    bottom: 6px;
    right: 6px;
    background: white;
    padding: 6px 8px;
    border-radius: 50%;
    font-size: 18px;
}

/* Input fields */
.field {
    margin-top: 18px;
}

label {
    font-weight: 600;
}

/* Save button */
button {
    width: 100%;
    margin-top: 25px;
    font-size: 17px;
    padding: 10px;
}

/* Mobile responsive */
@media(max-width: 500px) {
    .profile-container {
        padding: 22px;
        border-radius: 12px;
    }
    .profile-photo {
        width: 130px;
        height: 130px;
    }
}
</style>

<!-- FontAwesome for Camera Icon -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<div class="profile-container">

    <h2 class="text-center mb-3">ðŸ‘¤ Your Profile</h2>

    <!-- Profile Image Click to Upload -->
    <div class="profile-photo mb-4" onclick="document.getElementById('profileInput').click();">
        <img id="profilePreview" 
             src="<%= currUser.profileImage ? currUser.profileImage : 'https://api.dicebear.com/7.x/thumbs/svg?seed=' + currUser.username %>" 
             alt="Profile Photo">
    </div>

    <form action="/profile" method="POST" enctype="multipart/form-data">

        <input type="file" id="profileInput" name="profileImage" accept="image/*" style="display:none;">

        <div class="field">
            <label>Full Name</label>
            <input type="text" class="form-control" name="name" value="<%= currUser.name %>" required>
        </div>

        <div class="field">
            <label>Email</label>
            <input type="text" class="form-control" value="<%= currUser.email %>" disabled>
        </div>

        <div class="field">
            <label>Select Role</label>
            <select class="form-control" name="role">
                <option value="student" <%= currUser.role === "student" ? "selected" : "" %>>Student</option>
                <option value="teacher" <%= currUser.role === "teacher" ? "selected" : "" %>>Teacher</option>
            </select>
        </div>

        <button class="btn btn-primary">Save Changes</button>
    </form>
</div>

<!-- Image Preview Script -->
<script>
document.getElementById('profileInput').addEventListener('change', function(event) {
    const file = event.target.files[0];
    if (file) {
        document.getElementById('profilePreview').src = URL.createObjectURL(file);
    }
});
</script>