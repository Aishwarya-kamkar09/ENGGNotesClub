
<style>
    /* =========================
   PAGE TITLE
========================= */
h2{
  text-align:center;
  font-size:26px;
  font-weight:600;
  margin:30px 0 25px;
  color:#0F172A;
}

/* =========================
   FORM CONTAINER
========================= */
form{
  max-width:520px;
  margin:0 auto;
  background:#ffffff;
  padding:30px 28px;
  border-radius:16px;
  border:1px solid #E2E8F0;
  box-shadow:0 12px 30px rgba(0,0,0,0.06);
}

/* =========================
   INPUT FIELD
========================= */
form .form-control{
  padding:14px 16px;
  font-size:15px;
  border-radius:10px;
  border:1px solid #CBD5E1;
  transition:all 0.25s ease;
}

form .form-control:focus{
  border-color:#2563EB;
  box-shadow:0 0 0 3px rgba(37,99,235,0.15);
  outline:none;
}

/* =========================
   BUTTON
========================= */
form .btn-success{
  width:100%;
  padding:14px;
  margin-top:18px;
  font-size:15px;
  font-weight:600;
  border-radius:12px;
  background:linear-gradient(135deg,#2563EB,#1E40AF);
  border:none;
  transition:all 0.3s ease;
}

form .btn-success:hover{
  transform:translateY(-1px);
  box-shadow:0 10px 25px rgba(37,99,235,0.35);
}

/* =========================
   RESPONSIVE
========================= */
@media (max-width:768px){
  h2{
    font-size:22px;
  }

  form{
    margin:0 15px;
    padding:24px 20px;
  }
}
</style>
<% layout("/layouts/boilerplate") %>

<h2>AI Explanation Tool</h2>

<form action="/ai/explain" method="POST">
    <input type="text" name="topic" class="form-control" placeholder="Enter topic...">
    <button class="btn btn-success mt-3">Explain</button>
</form>