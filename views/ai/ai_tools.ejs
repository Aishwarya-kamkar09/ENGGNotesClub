<% layout("/layouts/boilerplate") %>

<style>
/* =========================
   PAGE TITLE
========================= */
h1{
  font-size:28px;
  font-weight:600;
  color:#0F172A;
}

/* =========================
   GRID LAYOUT
========================= */
.tool-grid{
  display:grid;
  grid-template-columns:repeat(2, 1fr);   /* 2 boxes per row */
  gap:32px;
  margin:40px auto;
  padding:0 24px;
  max-width:1200px;                      /* wider layout */
}

/* =========================
   TOOL CARD
========================= */
.tool-card{
  background:#ffffff;
  padding:32px 28px;
  border-radius:14px;
  border:1px solid #E2E8F0;
  box-shadow:0 10px 25px rgba(0,0,0,0.04);

  /* IMPORTANT FOR EQUAL HEIGHT */
  display:flex;
  flex-direction:column;
  justify-content:space-between;

  transition:all 0.25s ease;
}

.tool-card:hover{
  transform:translateY(-6px);
  box-shadow:0 20px 35px rgba(0,0,0,0.08);
}

/* =========================
   CARD TEXT
========================= */
.tool-card h3{
  font-size:20px;
  font-weight:600;
  margin-bottom:12px;
  color:#1E293B;
}

.tool-card p{
  font-size:15px;
  line-height:1.6;
  color:#475569;
  margin-bottom:24px;
}

/* =========================
   BUTTON
========================= */
.tool-card .btn{
  align-self:flex-start;
  padding:10px 26px;
  font-size:14px;
  font-weight:500;
  border-radius:999px;
  background:#1E3A8A;
  border:none;
}

.tool-card .btn:hover{
  background:#162C46;
}

/* =========================
   RESPONSIVE
========================= */
@media (max-width:900px){
  .tool-grid{
    grid-template-columns:1fr;  /* single column on mobile */
  }

  h1{
    font-size:24px;
  }
}
</style>

