
<style>
    /* =========================
   PAGE TITLE
========================= */
h2{
  text-align:center;
  font-size:26px;
  font-weight:600;
  margin:30px 0 25px;
  color:#0F172A;
}

/* =========================
   FORM CONTAINER
========================= */
form{
  max-width:620px;
  margin:0 auto;
  background:#ffffff;
  padding:32px 30px;
  border-radius:16px;
  border:1px solid #E2E8F0;
  box-shadow:0 12px 30px rgba(0,0,0,0.06);
}

/* =========================
   TEXTAREA
========================= */
form textarea.form-control{
  padding:16px 18px;
  font-size:15px;
  border-radius:12px;
  border:1px solid #CBD5E1;
  resize:vertical;
  min-height:160px;
  transition:all 0.25s ease;
}

form textarea.form-control:focus{
  border-color:#2563EB;
  box-shadow:0 0 0 3px rgba(37,99,235,0.15);
  outline:none;
}

/* =========================
   BUTTON
========================= */
form .btn-success{
  width:100%;
  padding:14px;
  margin-top:20px;
  font-size:15px;
  font-weight:600;
  border-radius:12px;
  background:linear-gradient(135deg,#2563EB,#1E40AF);
  border:none;
  transition:all 0.3s ease;
}

form .btn-success:hover{
  transform:translateY(-1px);
  box-shadow:0 10px 25px rgba(37,99,235,0.35);
}

/* =========================
   RESPONSIVE
========================= */
@media (max-width:768px){
  h2{
    font-size:22px;
  }

  form{
    margin:0 15px;
    padding:26px 22px;
  }

  form textarea.form-control{
    min-height:140px;
  }
}
</style>
<% layout("/layouts/boilerplate") %>

<h2>AI Summary Tool</h2>

<form action="/ai/summarize" method="POST">
    <textarea name="text" class="form-control" rows="6" placeholder="Paste text to summarize..."></textarea>
    <button class="btn btn-success mt-3">Summarize</button>
</form>